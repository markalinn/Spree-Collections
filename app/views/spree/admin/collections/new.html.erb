<h4><%= t("new_collection") %></h4>
<%= form_for(:collection, :url => { :controller => 'collections', :action => 'create' }) do |form| %>
  <table class="basic-table">
    <%= render :partial => "form", :locals => { :f => form } %>
  </table>
  <p class="form-buttons">
    <%= button t("update") %>
    <%= t('or') %> <%= link_to t("cancel"), "#", :id => "cancel_link" %>
  </p>
<% end %>


<script type="text/javascript">    
  jQuery('#cancel_link').click(function (event) { 
    jQuery('#new_collection_link').show();
    jQuery('#collections').html('');
  });  
 
</script>